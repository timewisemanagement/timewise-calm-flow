{
  "appId": "com.timewise.calmflow",
  "productName": "TimeWise Calm Flow",
  "directories": {
    "output": "release",
    "buildResources": "electron/build"
  },
  "files": [
    "dist/**/*",
    "electron/main.cjs",
    "electron/preload.js"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icon.png"
  }
}
